# Variabili d'ambiente esempio
# Copia questo file in .env o .env.local e inserisci i tuoi valori

# Configurazione database
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres
POOLER_URL=postgresql://postgres.your-project-ref:your_password@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# Configurazione Supabase
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Variabili frontend (accessibili da Vite)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Nome del bucket principale per lo storage
VITE_SUPABASE_STORAGE_BUCKET=images

# Storage bucket URL
VITE_SUPABASE_STORAGE_BUCKET_URL=https://your-project-ref.supabase.co/storage/v1/object/public/images

# Configurazione Stripe
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# API Keys
API_SECRET_KEY=your-api-secret-key

# Configurazione server
PORT=3000
NODE_ENV=development

# API
VITE_API_URL=http://localhost:3000/api

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Lemon Squeezy
LEMON_SQUEEZY_API_KEY=your-lemon-squeezy-api-key
LEMON_SQUEEZY_STORE_ID=your-lemon-squeezy-store-id
LEMON_SQUEEZY_WEBHOOK_SECRET=your-lemon-squeezy-webhook-secret

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=gestionale_affitti

# JWT
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h 